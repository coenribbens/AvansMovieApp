<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/cv_review_item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_review_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Test"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_review_item_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_review_item_content"
        android:text="lorem ipsum dolor sid amet"
        android:layout_marginTop="3dp"
        android:textSize="14dp">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>