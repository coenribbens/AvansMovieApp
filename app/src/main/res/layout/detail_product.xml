<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_product_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_product_detail_title"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_product_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titel"
        app:layout_constraintStart_toEndOf="@id/iv_product_detail_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textStyle="italic"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="specTag"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_product_detail_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_title" />




</androidx.constraintlayout.widget.ConstraintLayout>